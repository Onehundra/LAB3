<UserControl x:Class="Labb3_NET22.Views.CreateQuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb3_NET22.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Background="LightBlue">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="Create quiz" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center"
                   Margin="10"/>

                <TextBlock Text="Quiz Name:"/>
                <TextBox Name="QuizTitleBox" Width="250" Margin="10"/>

                <TextBlock Text="Question:"/>
                <TextBox Name="QuestionBox" Width="400" Margin="10"/>

                <TextBlock Text="Option 1:"/>
                <TextBox Name="Answer1Box" Width="200" Margin="10"/>

                <TextBlock Text="Option 2:"/>
                <TextBox Name="Answer2Box" Width="200" Margin="10"/>

                <TextBlock Text="Option 3:"/>
                <TextBox Name="Answer3Box" Width="200" Margin="10"/>

                <TextBlock Text="Option 4:"/>
                <TextBox Name ="Answer4Box" Width="200"/>

                <TextBlock Text="Correct Option Number:"/>
                <TextBox Name="CorrectAnswerBox" Width="200" Margin="15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Add to quiz" Width="120" Margin="5" Click="AddQuestion_Click"/>
                    <Button Content="Save quiz" Width="120" Margin="5" Click="SaveQuiz_Click"/>
                    <Button Content="Return to menu" Width="120" Margin="5" Click="ReturnToMenu_Click"/>
                </StackPanel>

            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
