<UserControl x:Class="Labb3_NET22.Views.StartMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3_NET22.Views"
        mc:Ignorable="d">
    <Border Background="LightBlue">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="QUIZ" FontSize="60" FontFamily="Algerian" FontWeight="Bold" HorizontalAlignment="Center" Margin="30"/>

            <Button Content="Start QUIZ"  Width="200" Height="40" Margin="10" FontFamily="Arial Black" FontSize="15" FontWeight="Bold" Click="StartQuiz_Click"/>
            <Button Content="Edit THIS Quiz" Width="200" Height="20" Margin="5" FontFamily="Arial Black" FontSize="10" Click="EditQuiz_Click"/>
            <Button Content="Create New Quiz" Width="180" Height="20" Margin="10" FontFamily="Arial Black" FontSize="10" Click="CreateQuiz_Click"/>
            <Button Content="EXIT" Width="100" Height="20" Margin="10" FontFamily="Arial Black" Click="Exit_Click"/>
        </StackPanel>
    </Border>

</UserControl>
